{
    "compilerOptions": {
        "module": "CommonJS",
        "types": [
            "types-for-adobe/photoshop/2015.5"
        ],
        "lib": [
            "DOM",
            "ES2015"
        ],
        // "noEmitOnError": true,
        // "outFile": "./dist/psd2ugui.extension.js",
        "removeComments": false,
        "target": "ES3",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "declarationMap": true,
        "declaration": true,
        "sourceMap": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ],
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}